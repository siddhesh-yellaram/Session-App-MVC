
@{
    if(Session["count"] == null)
    {
        Session["count"] = 0;
    }

    var old = (int) Session["count"];
    Session["count"] = ((int) Session["count"] + 1);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h3>old: @old</h3>
        <h3>new: @Session["count"]</h3>
        <h3>@Session.SessionID</h3>
        @Html.ActionLink("Click Here To View Summary", "Summary", "Summary")
    </div>
</body>
</html>
